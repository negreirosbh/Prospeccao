<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorlinha1"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/txt_item_nc"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:text="4567853"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_item_cidade"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Fortaleza"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_item_data"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="28/08/2018"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_item_hora"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="18:00"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:text="editar"
        android:textSize="8sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:text="finalizar"
        android:textSize="8sp" />
</LinearLayout>