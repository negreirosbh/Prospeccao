<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp">

    <FrameLayout
        android:id="@+id/frameLayout_ipmedida"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="27dp"
        android:background="@color/colorlinha1"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dados do Medidor"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </FrameLayout>

    <Button
        android:id="@+id/btnSalvar_ipmedida"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorFundoLinha"
        android:text="AVANÇAR"
        android:textColor="#800000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSalvar_ipmedida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout_ipmedida">

        <TableLayout
            android:id="@+id/tableLayout_ipmedida"
            android:layout_width="330dp"
            android:layout_height="match_parent">


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorlinha1"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8sp"
                    android:text="Cidade"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/txtCidade_ipmedida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/colorFundoLinha"
                    android:inputType="text"
                    android:padding="8sp"
                    android:textSize="12sp" />

            </TableRow>


            <TableRow

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorlinha2"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8sp"
                    android:text="Bairro"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/txtUC_ipmedida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/colorFundoLinha"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="8sp"
                    android:textSize="12sp" />

            </TableRow>


            <TableRow

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorlinha1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8sp"
                    android:text="NC"
                    android:textColor="#FFFFFF" />


                <EditText
                    android:id="@+id/txtNC_ipmedida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/colorFundoLinha"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="8sp"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorlinha2"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8sp"
                    android:text="NF"
                    android:textColor="#FFFFFF" />


                <EditText
                    android:id="@+id/txtNF_ipmedida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/colorFundoLinha"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="8sp"
                    android:textSize="12sp" />

            </TableRow>


            <TableRow

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorlinha1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8sp"
                    android:text="Fases"
                    android:textColor="#FFFFFF" />

                <Spinner
                    android:id="@+id/spiFases_ipmedida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/colorFundoLinha"
                    android:entries="@array/fases_arrays"
                    android:padding="5sp" />

            </TableRow>


            <TableRow

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorlinha2"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8sp"
                    android:text="I(A)Disjuntor"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/txtDisjuntor_ipmedida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/colorFundoLinha"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="8sp"
                    android:textSize="12sp" />

            </TableRow>


            <TableRow

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorlinha1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8sp"
                    android:text="Leitura"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/txtLeitura_ipmedida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/colorFundoLinha"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="8sp"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorlinha2"
                android:gravity="center_vertical">


                <Button
                    android:id="@+id/button_ipmedida"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@color/colorFundoLinha"
                    android:text="coletar"
                    android:textColor="#800000" />

                <EditText
                    android:id="@+id/txtCoordY_ipmedida"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorFundoLinha"
                    android:ems="10"
                    android:hint="Coordenada Y"
                    android:inputType="text"
                    android:padding="8sp"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/txtCoordX_ipmedida"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorFundoLinha"
                    android:ems="10"
                    android:hint="Coordenada X"
                    android:inputType="text"
                    android:padding="8sp"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorlinha1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8sp"
                    android:text="Classe"
                    android:textColor="#FFFFFF" />

                <Spinner
                    android:id="@+id/spiClasse_ipmedida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/colorFundoLinha"
                    android:entries="@array/classe_arrays"
                    android:padding="5sp" />

            </TableRow>

            <TableRow

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorlinha2"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:lines="3"
                    android:padding="8sp"
                    android:text="Observação"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/txtOBS_ipmedida"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:background="@color/colorFundoLinha"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:padding="8sp"
                    android:textSize="12sp" />

            </TableRow>


        </TableLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>